= render 'events/menu', event: @event

- breadcrumb :event, @event

= @event.description

.ui.segment
  h2 Participants

  - unless @event.participants.empty?
    == render 'participations/table', participations: @event.participations

  - if can? :manage, @event
    = link_to "Add participant", new_event_participation_path(@event), class: 'ui button secondary'
    = link_to "Deltakere med enkeltrom", single_room_participants_event_participations_path(@event), class: 'ui button primary'
    = link_to "Deltakere med allergier", event_allergies_path(@event), class: 'ui button primary'
