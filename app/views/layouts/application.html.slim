html
  head
    title ConferenceCommander
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application'
    = stylesheet_link_tag "https://fonts.googleapis.com/css?family=Sarpanch:400,500,600,700,800,900"

  body
    - unless controller_name.to_sym == :sessions
      = render 'layouts/menu', fixed: true

    = render 'layouts/alerts', flash: flash
    .ui.page.grid
      .wide.column
        = content_for?(:content) ? yield(:content) : yield
