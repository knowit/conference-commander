- if users.empty?
  .empty= empty_table
- else
  table.ui.very.basic.large.table
    thead
      tr
        th = User.human_attribute_name(:name)
        th = User.human_attribute_name(:email)
        th = t('.passport_information_complete')
        th = t('shared.table.actions')
    tbody
      - users.each do |user|
        tr
          td = user.full_name
          td = user.email
          td = yesno_icon(user.passport_complete?)
          td style="width: 10%"
            - if can? :update, user
              = render 'shared/action_links', object: user
              =< link_to fa_icon('eye lg'), impersonate_user_path(user), method: :post
