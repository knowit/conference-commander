- unless @users.empty?
  table.ui.celled.table
    thead
      tr
        th
        th = User.human_attribute_name(:name)
        th = User.human_attribute_name(:email)
        th = User.human_attribute_name(:gender)
        th = User.human_attribute_name(:id)
        th
    tbody
      - @users.each do |user|
        tr
          td
            i.ui.large.user.icon
          td = user.name
          td = user.email
          td = user.gender
          td = user.id
          td
            div.ui.mini.buttons
              = link_to "Edit", edit_user_path(user), class: "ui button primary"
              div.or
              = link_to "Delete", user_path(user), method: :delete, class: "ui button"
