.three.fields
  = f.input :first_name, as: :string
  = f.input :last_name, as: :string
  = f.input :email, as: :string
  = f.input :birth_date, as: :string

.three.fields
  = f.input :passport_name
  = f.input :passport_number
  = f.input :passport_nationality
.two.fields
  = f.input :passport_issued_at, as: :string
  = f.input :passport_expires_at, as: :string

.inline.fields
  - User.genders.keys.each do |gender|
    .field
      = f.radio_button :gender, gender
      = f.label gender

= f.input :allergies

- if current_user.role == 'administrator'
  = f.input :role, collection: User.roles.keys.to_a,
    input_html: { class: 'ui dropdown selection' },
    label_method: lambda { |v| t("users.edit.#{v}") }
